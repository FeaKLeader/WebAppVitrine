{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "module": "ES2022",
      "moduleResolution": "Node",
      "importHelpers": true,
      "target": "ES2022",
      "useDefineForClassFields": false,
      "lib": ["ES2022", "DOM"], 
      "allowSyntheticDefaultImports": true
    }
  }
  